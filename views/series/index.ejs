 <% include ../partials/header.ejs%>

    <header class="bg-info text-white">
      <div class="container text-center">
        <h1><img src="/images/logo.png" alt="Minhas Séries" /></h1>
        <p class="lead">Gerencie suas séries com Express + Mongo + NodeJS</p>
      </div>
    </header>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Séries</h2>
            <p class="lead"><a href="/series/new" class="btn btn-info">Adicionar série</a></p>
            <ul>
              <% series.forEach( serie => { %>
                <li><strong><%= serie.name %></strong> | <%= serie.status %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </section>
  

<% include ../partials/footer.ejs%>