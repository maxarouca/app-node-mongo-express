 <% include ../partials/header.ejs%>

    <header class="bg-info text-white">
      <div class="container text-center">
        <h1><img src="/images/logo.png" alt="Minhas Séries" /></h1>
        <p class="lead">Gerencie suas séries com Express + Mongo + NodeJS</p>
      </div>
    </header>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Nova série</h2>
            <p class="lead"><a href="/series" class="btn btn-info">Volta a lista de séries</a></p>
            <form method="POST">
              <div class="form-group">
                <label for="name">Nome da Série</label>
                <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" placeholder="Informe o nome da Série" required>
                <small id="emailHelp" class="form-text text-muted">Nome da Série a ser assistida</small>

              </div>
              <div class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="status" name="status">
                  <option value="to-watch">Para Assistir</option>
                  <option value="watching">Assistindo</option>
                  <option value="watched">Assistida</option>
                </select>
              </div>
              <button type="submit" class="btn btn-info">Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </section>
  

<% include ../partials/footer.ejs%>